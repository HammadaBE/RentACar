<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_tinted"
        android:scaleType="centerCrop" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseOptionActivity">

        <Button
            android:id="@+id/yourBookingButton"
            android:layout_width="166dp"
            android:layout_height="48dp"
            android:layout_marginTop="272dp"
            android:text="Your bookings"
            android:onClick="launchBookingListActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bookCarButton"
            android:layout_width="174dp"
            android:layout_height="46dp"
            android:layout_marginTop="92dp"
            android:text="Book a car"
            android:onClick="launchSecondActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yourBookingButton"
            app:layout_constraintVertical_bias="0.196" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>